<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Main.css" rel="stylesheet" />
    <link href="~/Content/buju.css" rel="stylesheet" />
    <style type="text/css">
        * {
            margin: 0px;
            padding: 0px;
            text-decoration: none;
            list-style: none;
        }
    </style>
    <script type="text/javascript">
        
    </script>
</head>
<body>
    @* 头部 *@
    <div id="head">
        <div class="grid">
            <div class="grid-cell-1">
                <div style="height:60px;text-align:center;line-height:60px;background-color:#444444;color:white;font-size:30px;font-family:KaiTi">
                    图标
                </div>
            </div>
            <div class="grid-cell-4">
                <div style="height:60px;text-align:center;line-height:60px;background-color:#444444;color:white;font-size:30px;font-family:KaiTi">
                    Security房介后台管理系统
                </div>
            </div>
            <div class="grid-cell-1">
                <div style="height:60px;text-align:center;line-height:60px;background-color:#444444;color:white;font-size:30px;font-family:KaiTi">
                    账号信息
                </div>
            </div>
        </div>
    </div>
    <div id="body">
        <div class="grid">
            @* 左侧导航 *@
            <div style="width:250px;height:875px;background-color:#d9edf7;overflow:auto;">
                <div class="panel-group" id="accordion" style="width:250px;">
                    <div class="panel panel-info">
                        <a data-toggle="collapse" style="display:block;text-align:center;" class="panel-heading" data-parent="#accordion" href="#collapseOne">
                            <span class="glyphicon glyphicon-book"></span><span style="font-size:18px;">&nbsp;客户信息</span>
                            <span style="float:right;font-weight:bold;" class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                        <div id="collapseOne" style="text-align:center;" class="panel-collapse collapse">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-search"></span>&nbsp;客户信息管理</a>
                            </div>
                            @*<div class="panel-body">
                        <a href="#"><span class="glyphicon glyphicon-plus"></span>&nbsp;添加客户信息</a>
                    </div>
                    <div class="panel-body">
                        <a href="#"><span class="glyphicon glyphicon-edit"></span>&nbsp;修改客户信息</a>
                    </div>
                    <div class="panel-body">
                        <a href="#"><span class="glyphicon glyphicon-trash"></span>&nbsp;删除客户信息</a>
                    </div>*@
                        </div>
                    </div>
                </div>
                <div class="panel-group" id="accordion" style="width:250px;">
                    <div class="panel panel-info">
                        <a data-toggle="collapse" style="display:block;text-align:center;" class="panel-heading" data-parent="#accordion" href="#collapseTwo">
                            <span class="glyphicon glyphicon-book"></span><span style="font-size: 18px; ">&nbsp;出租房信息</span>
                            <span style="float:right;font-weight:bold;" class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                        <div id="collapseTwo" style="text-align:center;" class="panel-collapse collapse">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-search"></span>&nbsp;出租房信息管理</a>
                            </div>
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-trash"></span>&nbsp;单人租房管理</a>
                            </div>
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-trash"></span>&nbsp;合租管理</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-group" id="accordion" style="width:250px;">
                    <div class="panel panel-info">
                        <a data-toggle="collapse" style="display:block;text-align:center;" class="panel-heading" data-parent="#accordion" href="#collapseThree">
                            <span class="glyphicon glyphicon-book"></span><span style="font-size:18px;">&nbsp;出售房信息</span>
                            <span style="float:right;font-weight:bold;" class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                        <div id="collapseThree" style="text-align:center;" class="panel-collapse collapse">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-search"></span>&nbsp;出售房信息管理</a>
                            </div>
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-plus"></span>&nbsp;客户-房屋管理</a>
                            </div>
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-edit"></span>&nbsp;客户-分期管理</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-group" id="accordion" style="width:250px;">
                    <div class="panel panel-info">
                        <a data-toggle="collapse" style="display:block;text-align:center;" class="panel-heading" data-parent="#accordion" href="#collapseFour">
                            <span class="glyphicon glyphicon-book"></span><span style="font-size:18px;">&nbsp;管理员信息</span>
                            <span style="float:right;font-weight:bold;" class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                        <div id="collapseFour" style="text-align:center;" class="panel-collapse collapse">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-search"></span>&nbsp;查询管理员信息</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* 右侧内容 *@
            <div class="grid-cell-6">
                <div style="overflow:auto;height:875px">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @* 底部 *@
    <div id="foot">
        <div style="width:100%;line-height:40px;height:40px;text-align:center;background-color:#444444;color:white">版权所有</div>
    </div>


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>










