
@{
    ViewBag.Title = "HouseSee";
    Layout = "~/Views/BackstageView.cshtml";
}
@using _201817380227易炽昆.Models
@{
    LeaseHouse leaseHouse = ViewBag.leaseHouse;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/BackStage/Index">首页</a></li>
        <li class="breadcrumb-item"><a href="#">出租房信息</a></li>
        <li class="breadcrumb-item"><a href="/LeaseHouse/Index">出租房信息管理</a></li>
        <li class="breadcrumb-item active" aria-current="page">查看房屋信息</li>
    </ol>
</nav>
<div style="width:80%;margin-left:10%;margin-top:6%;">
    <div class="form-group row">
        <label for="LeaseID" class="col-sm-2 col-form-label">ID：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.LeaseID" id="LeaseID" name="LeaseID">
        </div>
    </div>
    <div class="form-group row">
        <label for="Position" class="col-sm-2 col-form-label">地址：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.Position" id="Position" name="Position">
        </div>
    </div>
    <div class="form-group row">
        <label for="Describe" class="col-sm-2 col-form-label">介绍：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.Describe" id="Describe" name="Describe">
        </div>
    </div>
    <div class="form-group row">
        <label for="Area" class="col-sm-2 col-form-label">面积：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.Area" id="Area" name="Area">
        </div>
    </div>
    <div class="form-group row">
        <label for="HouseType" class="col-sm-2 col-form-label">房屋类型：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.HouseType" id="HouseType" name="HouseType">
        </div>
    </div>
    <div class="form-group row">
        <label for="Price" class="col-sm-2 col-form-label">价格（月）：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.Price" id="Price" name="Price">
        </div>
    </div>
    <div class="form-group row">
        <label for="LeaseFurniture" class="col-sm-2 col-form-label">家具：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.LeaseFurniture" id="LeaseFurniture" name="LeaseFurniture">
        </div>
    </div>
    <div class="form-group row">
        <label for="LeaseFurniture" class="col-sm-2 col-form-label">出租类型：</label>
        <div class="col-sm-10">
            @if (leaseHouse.LeaseType == 0)
            {
                <input type="text" class="form-control" readonly value="单人" id="LeaseType" name="LeaseType">
            }
            else
            {
                <input type="text" class="form-control" readonly value="合租" id="LeaseType" name="LeaseType">
            }
        </div>
    </div>
    <div class="form-group row">
        <label for="IsLease" class="col-sm-2 col-form-label">是否出租：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.IsLease" id="IsLease" name="IsLease">
        </div>
    </div>
    <div class="form-group row">
        <label for="Contacts" class="col-sm-2 col-form-label">联系人：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.Contacts" id="Contacts" name="Contacts">
        </div>
    </div>
    <div class="form-group row">
        <label for="ContactsPhone" class="col-sm-2 col-form-label">联系人电话：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.ContactsPhone" id="ContactsPhone" name="ContactsPhone">
        </div>
    </div>
    <div class="form-group row">
        <label for="HousePhone" class="col-sm-2 col-form-label">房东电话：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@leaseHouse.HousePhone" id="HousePhone" name="HousePhone">
        </div>
    </div>
    <a href="javascript:history.go(-1)" class="btn btn-info" style="width:200px;">返回</a>
</div>

