<div style="width:80%;margin-left:10%;margin-top:10%;">
    <div class="form-group row">
        <label for="UserID" class="col-sm-2 col-form-label">ID：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserID" id="UserID" name="UserID">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserName" class="col-sm-2 col-form-label">用户名：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserName" id="UserName" name="UserName">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserLogin" class="col-sm-2 col-form-label">账号：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserLogin" id="UserLogin" name="UserLogin">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserPwd" class="col-sm-2 col-form-label">密码：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserPwd" id="UserPwd" name="UserPwd">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserSex" class="col-sm-2 col-form-label">性别：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@user.UserSex" readonly id="UserSex" name="UserSex">

        </div>
    </div>
    <div class="form-group row">
        <label for="UserAge" class="col-sm-2 col-form-label">年龄：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserAge" id="UserAge" name="UserAge">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserPhone" class="col-sm-2 col-form-label">手机号：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@user.UserPhone" id="UserPhone" name="UserPhone">
        </div>
    </div>
    <div class="form-group row">
        <label for="UserSex" class="col-sm-2 col-form-label">状态：</label>
        <div class="col-sm-10">
            @if (user.State == 0)
            {
                <input type="text" class="form-control" readonly value="正常" name="State">
            }
            else
            {
                <input type="text" class="form-control" value="注销" readonly name="State" />
            }

        </div>
    </div>
    @*<input type="hidden" name="UserID" value="@user.UserID" />*@
