
@{
    ViewBag.Title = "HouseSee";
    Layout = "~/Views/BackstageView.cshtml";
}

@using _201817380227易炽昆.Models
@{
    SellHouse sellHouse = ViewBag.sellHouse;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/BackStage/Index">首页</a></li>
        <li class="breadcrumb-item"><a href="#">出售房信息</a></li>
        <li class="breadcrumb-item"><a href="/SellHouse/Index">出售房信息管理</a></li>
        <li class="breadcrumb-item active" aria-current="page">查看房屋信息</li>
    </ol>
</nav>
<div style="width:80%;margin-left:10%;margin-top:6%;">
    <div class="form-group row">
        <label for="SellID" class="col-sm-2 col-form-label">ID：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.SellID" id="SellID" name="SellID">
        </div>
    </div>
    <div class="form-group row">
        <label for="Position" class="col-sm-2 col-form-label">地址：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.Position" id="Position" name="Position">
        </div>
    </div>
    <div class="form-group row">
        <label for="Describe" class="col-sm-2 col-form-label">介绍：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.Describe" id="Describe" name="Describe">
        </div>
    </div>
    <div class="form-group row">
        <label for="Area" class="col-sm-2 col-form-label">面积：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.Area" id="Area" name="Area">
        </div>
    </div>
    <div class="form-group row">
        <label for="HouseType" class="col-sm-2 col-form-label">房屋类型：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.HouseType" id="HouseType" name="HouseType">
        </div>
    </div>
    <div class="form-group row">
        <label for="SellPrice" class="col-sm-2 col-form-label">价格（月）：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.SellPrice" id="SellPrice" name="SellPrice">
        </div>
    </div>
    <div class="form-group row">
        <label for="LeaseFurniture" class="col-sm-2 col-form-label">全款/分期：</label>
        <div class="col-sm-10">
            @if (sellHouse.BuyType == null)
            {
                <input type="text" class="form-control" readonly value="未选定" id="BuyType" name="BuyType">
            }
            else
            {
                if (sellHouse.BuyType == 0)
                {
                    <input type="text" class="form-control" readonly value="全款" id="BuyType" name="BuyType">
                }
                else
                {
                    <input type="text" class="form-control" readonly value="分期" id="BuyType" name="BuyType">
                }
            }
        </div>
    </div>
    <div class="form-group row">
        <label for="IsSell" class="col-sm-2 col-form-label">是否出售：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.IsSell" id="IsSell" name="IsSell">
        </div>
    </div>
    <div class="form-group row">
        <label for="Contacts" class="col-sm-2 col-form-label">联系人：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.Contacts" id="Contacts" name="Contacts">
        </div>
    </div>
    <div class="form-group row">
        <label for="ContactsPhone" class="col-sm-2 col-form-label">联系人电话：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.ContactsPhone" id="ContactsPhone" name="ContactsPhone">
        </div>
    </div>
    <div class="form-group row">
        <label for="HousePhone" class="col-sm-2 col-form-label">房东电话：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly value="@sellHouse.HousePhone" id="HousePhone" name="HousePhone">
        </div>
    </div>
    <a href="javascript:history.go(-1)" class="btn btn-primary" style="width:200px;">返回</a>
</div>

