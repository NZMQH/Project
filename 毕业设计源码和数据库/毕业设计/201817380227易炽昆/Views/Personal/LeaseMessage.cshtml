
@{
    ViewBag.Title = "LeaseMessage";
    Layout = "~/Views/PersonalMassage.cshtml";
}
@using _201817380227易炽昆.Models
@{
    List<Lease> list = ViewBag.list;
}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Personal/Index">个人中心</a></li>
            <li class="breadcrumb-item active" aria-current="page">租房记录</li>
        </ol>
    </nav>

@if (list.Count > 0)
{
    <table class="table table-hover" style="width:80%;margin:0px auto;margin-top:2%;" border="1">
        <tr style="font-weight:bolder;font-size:20px;text-align:center;">
            <td>位置</td>
            <td>介绍</td>
            <td>房型</td>
            <td>租用类型</td>
            <td>面积</td>
            <td>租金(月)</td>
            <td>中介</td>
            <td>中介联系电话</td>
            <td>房东电话</td>
            <td>操作</td>
        </tr>
        @foreach (var item in list)
        {
            <tr style="text-align:center;line-height:63px;">
                <td>@item.LeaseHouse.Position</td>
                <td>@item.LeaseHouse.Describe</td>
                <td>@item.LeaseHouse.HouseType</td>
                <td>
                    @if (item.LeaseHouse.LeaseType == 0)
                    {
                        @:整组
                    }
                    else
                    {
                        @:合租
                    }
                </td>
                <td>@item.LeaseHouse.Area㎡</td>
                <td>@string.Format("{0:C}", item.LeaseHouse.Price)</td>
                <td>@item.LeaseHouse.Contacts</td>
                <td>@item.LeaseHouse.ContactsPhone</td>
                <td>@item.LeaseHouse.HousePhone</td>
                <td>
                    <a href="/Personal/LeaseDetail?ID=@item.ID" class="btn btn-primary">查看</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p style="font-size:26px;font-weight:bolder;width:100%;text-align:center;height:813px;line-height:813px;">暂无租房记录</p>
}

