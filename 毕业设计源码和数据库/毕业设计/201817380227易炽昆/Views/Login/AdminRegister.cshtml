
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <link href="~/Content/style1.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <style>
        label.error {
            color: red;
        }
    </style>
</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper" style="margin-top:30px;">
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form action="/Login/AdminRegister" method="post" id="RegisterForm">
                    <div class="input-group">
                        <input class="text" type="text" name="AdminName" placeholder="用户名" required="required" />
                        <span style="color:red;"></span>
                    </div>
                    <div class="input-group">
                        <input class="text" type="text" name="AdminLogin" placeholder="账号" required="required" />
                    </div>
                    <div class="input-group">
                        <input class="text" type="password" name="AdminPwd" placeholder="密码" required="required" />
                    </div>
                    <div class="input-group" style="color:white;margin-top:8%;font-size:17px;padding-bottom:20px;border-bottom:3px solid white;width:98%">
                        <label style="margin-left:3%;">性别：</label>
                        <div style="margin-left:25%;display:inline-block;" id="buttom-color">
                            <input class="text" type="radio" name="AdminSex" value="男" checked="checked" />男&nbsp;&nbsp;&nbsp;
                            <input class="text" type="radio" name="AdminSex" value="女" />女
                        </div>
                    </div>
                    <div class="input-group">
                        <input class="text" type="text" name="AdminAge" placeholder="年龄" required="required" />
                    </div>
                    <div class="input-group">
                        <input class="text" type="text" name="Adminphone" placeholder="手机号" required="required" />
                    </div>
                    <div class="input-group">
                        <input class="text" type="text" name="AdminIdentity" placeholder="身份证" required="required" />
                    </div>
                    <input type="hidden" name="State" value="正常" />
                    <div class="input-group">
                        <input type="submit" value="管 理 员 注 册" style="font-size:18px;font-weight:bolder;" />
                    </div>
                </form>
            </div>
        </div>
        <!-- copyright -->
        <!-- //copyright -->
        <ul class="w3lsg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
    <script type="text/javascript">
        $("#RegisterForm").validate({
            rules: {
                AdminName: { required: true, maxlength: 10 },
                AdminLogin: { required: true, maxlength: 20 },
                AdminPwd: { required: true, checkPwd: true },
                AdminAge: { required: true, checkAge: true },
                Adminphone: { required: true, maxlength: 11, minlength: 11 },
                AdminIdentity: { required: true, maxlength: 18, minlength: 15,checkIdentity:true }
            },
            messages: {
                AdminName: { required: "用户名不能为空", maxlength: "用户名不能超过10字" },
                AdminLogin: { required: "账号不能为空", maxlength: "账号不能超过20字符" },
                AdminPwd: { required: "密码不能为空", checkPwd: "密码组成：6-16位的字母数字组成" },
                AdminAge: { required: "年龄不能为空",checkAge:"请输入正确的年龄" },
                Adminphone: { required: "手机号不能为空", maxlength: "请输入11位的手机号", minlength: "请输入11位的手机号" },
                AdminIdentity: { required: "身份证不能为空", maxlength: "请输入正确的身份证", minlength: "请输入正确的身份证", }
            }
        })

        $.validator.addMethod("checkPwd", function (value, e) {
            var reg = /^[A-Za-z0-9]{6,16}$/;
            return reg.test(value);
        });
        $.validator.addMethod("checkAge", function (value, e) {
            var reg = /^[0-9]{1,3}$/;
            return reg.test(value);
        });
        $.validator.addMethod("checkIdentity", function (value, e) {
            var reg = /^[1-9]([0-9]{16}|[0-9]{13})[xX0-9]$/;
            return reg.test(value);
        });
    </script>
</body>
</html>
